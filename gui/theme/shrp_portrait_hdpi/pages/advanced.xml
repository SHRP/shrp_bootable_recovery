<?xml version="1.0"?>
<recovery>
	<pages>
		<page name="advanced">
			<template name="c_page"/>
			<template name="c_status_bar"/>
			<text color="%c_black%">
				<font resource="c_header"/>
				<placement x="550" y="%main_head%"/>
				<text>{@c_skyhawk=SKY HAWK}</text>
			</text>
			<text style="c_text_dashboard">
				<placement x="%c_hawk_base_column%" y="%sub_head%"/>
				<text>{@advanced_btn=Advanced}</text>
			</text>

			<button>
				<placement x="99" y="%dash_ico_1st_row%"/>
				<image resource="c_log"/>
				<action function="page">copylog</action>
			</button>
			<button style="c_dash_text_grid">
				<placement x="69" y="%dash_txt_1st_row%"/>
				<text>{@copy_log_btn=Copy Log}</text>
				<action function="page">copylog</action>
			</button>

			<button>
				<condition var1="tw_has_data_media" var2="1"/>
				<placement x="343" y="%dash_ico_1st_row%"/>
				<image resource="c_selinux"/>
				<action function="page">fixcontexts</action>
			</button>
			<button style="c_dash_text_grid">
				<condition var1="tw_has_data_media" var2="1"/>
				<placement x="313" y="%dash_txt_1st_row%"/>
				<text>{@fix_context_btn=Fix Contexts}</text>
				<action function="page">fixcontexts</action>
			</button>

			<button>
				<placement x="587" y="%dash_ico_1st_row%"/>
				<image resource="c_adb"/>
				<action function="page">sideload</action>
			</button>
			<button style="c_dash_text_grid">
				<placement x="557" y="%dash_txt_1st_row%"/>
				<text>{@c_adb_side_load=Sideload}</text>
				<action function="page">sideload</action>
			</button>

			<button>
				<placement x="831" y="%dash_ico_1st_row%"/>
				<image resource="c_sd_part"/>
				<actions>
					<action function="set">partitionlisterror=0</action>
					<action function="page">partsdcardsel</action>
				</actions>
			</button>
			<button style="c_dash_text_grid">
				<placement x="801" y="%dash_txt_1st_row%"/>
				<text>{@swipe_part_sd_s=Partition}</text>
				<actions>
					<action function="set">partitionlisterror=0</action>
					<action function="page">partsdcardsel</action>
				</actions>
			</button>


			<button>
				<placement x="99" y="%dash_ico_2nd_row%"/>
				<conditions>
					<condition var1="tw_is_fbe" var2="1"/>
				</conditions>
				<image resource="c_dashboard_userFbe"/>
				<actions>
					<action function="set">tw_crypto_user_id=</action>
					<action function="page">decrypt_users</action>
				</actions>
			</button>
			<button style="c_dash_text_grid">
				<placement x="69" y="%dash_txt_2nd_row%"/>
				<conditions>
					<condition var1="tw_is_fbe" var2="1"/>
				</conditions>
				<text>{@decrypt_users=Decrypt Users}</text>
				<actions>
					<action function="set">tw_crypto_user_id=</action>
					<action function="page">decrypt_users</action>
				</actions>
			</button>

			<action>
				<touch key="home"/>
				<action function="page">c_refresh</action>
			</action>

			<action>
				<touch key="back"/>
				<action function="page">c_refresh</action>
			</action>
		</page>
        <page name="sideload">
			<template name="c_page"/>
			<template name="c_status_bar"/>
			<text style="c_main_text_header">
				<placement x="%c_hawk_base_column%" y="%c_hawk_base_first_header%"/>
				<text>{@advanced_btn=Advanced}</text>
			</text>
			<text style="c_text_dashboard">
				<placement x="%c_hawk_base_column%" y="%c_hawk_base_second_header%"/>
				<text>{@adb_sideload_btn=ADB Sideload}</text>
			</text>

			<checkbox>
				<placement x="%c_hawk_base_column%" y="%c_text_sub_y%"/>
				<text>{@sideload_wipe_dalvik_chk=Wipe Dalvik Cache}</text>
				<data variable="tw_wipe_dalvik"/>
			</checkbox>

			<checkbox>
				<placement x="%c_hawk_base_column%" y="%c_text_sub_y3%"/>
				<text>{@sideload_wipe_cache_chk=Wipe Cache}</text>
				<data variable="tw_wipe_cache"/>
			</checkbox>

			<button>
				<image resource="c_ok"/>
				<placement x="860" y="1628"/>
				<actions>
					<action function="set">tw_back=advanced</action>
					<action function="set">tw_action=adbsideload</action>
					<action function="set">tw_action_text1={@sideload_confirm=ADB Sideload}</action>
					<action function="set">tw_action_text2={@sideload_usage=Usage: adb sideload filename.zip}</action>
					<action function="set">tw_complete_text1={@sideload_complete=ADB Sideload Complete}</action>
					<action function="set">tw_has_cancel=1</action>
					<action function="set">tw_show_reboot=1</action>
					<action function="set">tw_cancel_action=adbsideloadcancel</action>
					<action function="page">action_page</action>
				</actions>
			</button>


			<action>
				<touch key="home"/>
				<action function="page">c_refresh</action>
			</action>

			<action>
				<touch key="back"/>
				<action function="page">advanced</action>
			</action>
		</page>

		<page name="fixcontexts">
			<template name="c_page"/>
			<template name="c_status_bar"/>
			<text style="c_main_text_header">
				<placement x="%c_hawk_base_column%" y="%c_hawk_base_first_header%"/>
				<text>{@advanced_btn=Advanced}</text>
			</text>
			<text style="c_text_dashboard">
				<placement x="%c_hawk_base_column%" y="%c_hawk_base_second_header%"/>
				<text>{@fix_context_btn=Fix Contexts}</text>
			</text>
			<text style="c_sub">
				<placement x="%c_hawk_base_column%" y="%c_text_sub_y%"/>
				<text>{@fix_contexts_note1=Note: Fixing contexts is rarely needed.}</text>
			</text>

			<text style="c_sub">
				<placement x="%c_hawk_base_column%" y="%c_text_sub_y2%"/>
				<text>{@c_file_context=Fixing SELinux Contexts may cause your device to not boot properly.}</text>
			</text>
			<button>
				<image resource="c_ok"/>
				<placement x="860" y="1628"/>
				<actions>
					<action function="set">tw_back=advanced</action>
					<action function="set">tw_action=fixcontexts</action>
					<action function="set">tw_action_text1={@fixing_contexts=Fixing Contexts...}</action>
					<action function="set">tw_complete_text1={@fix_contexts_complete=Fix Contexts Complete}</action>
					<action function="set">tw_slider_text={@swipe_to_confirm=Swipe to Confirm}</action>
					<action function="set">tw_show_reboot=1</action>
					<action function="page">action_page</action>
				</actions>
			</button>


			<action>
				<touch key="home"/>
				<action function="page">c_refresh</action>
			</action>

			<action>
				<touch key="back"/>
				<action function="page">advanced</action>
			</action>
		</page>
		<!--MultiUserDecryptPage-->
		<page name="decrypt_users">
			<template name="c_page"/>
			<template name="c_status_bar"/>
			<text style="c_main_text_header">
				<placement x="%c_hawk_base_column%" y="%c_hawk_base_first_header%"/>
				<text>{@decrypt_users=Decrypt Users}</text>
			</text>
			<text style="c_text_dashboard">
				<placement x="%c_hawk_base_column%" y="%c_hawk_base_second_header%"/>
				<text>{@decrypt_users_selection=Select a user ID to decrypt}</text>
			</text>

			<listbox>
				<placement x="%c_hawk_base_column%" y="%file_selector_default_y%" w="%file_selector_default_w%" h="%file_selector_default_h%"/>
				<icon selected="c_usersRadioOn" unselected="c_usersRadioOff" />
				<data name="tw_crypto_user_id" />
			</listbox>

			<button>
				<placement x="860" y="1628"/>
				<image resource="c_ok"/>
				<actions>
					<action function="set">tw_crypto_password=</action>
					<action function="set">tw_password_fail=0</action>
					<action function="page">decrypt</action>
				</actions>
			</button>
			
			<action>
				<touch key="back"/>
				<action function="page">advanced</action>
			</action>
			<action>
				<touch key="home"/>
				<action function="page">c_refresh</action>
			</action>
		</page>
	</pages>
</recovery>
